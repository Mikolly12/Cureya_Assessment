<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/temp1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Welcome,"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:textSize="25sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/temp2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Name: "
        android:layout_marginLeft="80dp"
        android:layout_marginTop="100dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/temp1"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/profile_user_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Mayank"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/temp1"
        app:layout_constraintLeft_toRightOf="@id/temp2"
        />
    <TextView
        android:id="@+id/temp3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Email: "
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/temp2"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/profile_user_email"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="mayank@demo.com"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/temp2"
        app:layout_constraintLeft_toRightOf="@id/temp3"
        />
    <TextView
        android:id="@+id/temp4"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Mobile: "
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/temp3"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/profile_user_phone"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="9876543201"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/temp3"
        app:layout_constraintLeft_toRightOf="@id/temp4"
        />

    <Button

        android:id="@+id/btn_logout"
        android:background="@drawable/btn_logout"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:ems="10"
        android:layout_marginTop="50dp"
        android:text="Logout"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/temp4"/>



</androidx.constraintlayout.widget.ConstraintLayout>